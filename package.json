{
  "name": "skincare-app",
  "version": "1.0.0",
  "description": "AI powered skincare recommendations and analysis app",
  "main": "MSK-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "author": "Mariia Palamarchuk",
  "build": {
    "appId": "com.mariia.msk",
    "productName": "Make Skin Better",
    "files": [
      "MSK-main.js",
      "src/project/**/*",
      "src/build/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    }
  }
}
